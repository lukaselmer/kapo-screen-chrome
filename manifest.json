{
  "manifest_version": 2,
  "name": "Kapo-Screen",
  "version": "0.0.1",
  "permissions": ["tabs", "activeTab", "storage"],
  "content_scripts": [
    {
      "js": ["contentscript.js"],
      "css": [],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
